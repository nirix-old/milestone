<div class="new issue container">
    <h1 class="page-header"><%= t :new_issue %></h1>

    <%= error_messages_for @issue %>

    <%= form_for [:project, @issue], html: { class: 'form-horizontal' } do |f| %>
        <div class="form-group">
            <%= f.label :summary, class: 'control-label col-md-3' %>
            <div class="col-md-9">
                <%= f.text_field :summary, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :description, class: 'control-label col-md-3' %>
            <div class="col-md-9">
                <%= f.text_area :description, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :version_id, class: 'control-label col-md-3' %>
            <div class="col-md-9">
                <%= f.collection_select :version_id, current_project.versions.all, :id, :name, {}, class: 'form-control' %>
            </div>
        </div>

        <div class="form-actions">
            <%= f.submit t(:create), class: 'btn btn-success' %>
        </div>
    <% end %>
</div>
