<div class="box">
  <div class="form-group">
    <%= f.label :name, class: 'control-label col span-2' %>
    <div class="col span-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :slug, class: 'control-label col span-2' %>
    <div class="col span-10">
      <%= f.text_field :slug, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'control-label col span-2' %>
    <div class="col span-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: 'control-label col span-2' %>
    <div class="col span-10">
      <%= f.select :status, version_status_options %>
    </div>
  </div>
</div>
