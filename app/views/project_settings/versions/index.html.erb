<div class="project_settings versions content">
  <div class="page-actions">
    <%=link_to t(:new_version), new_project_settings_version_path, class: 'btn btn-success' %>
  </div>

  <h2 id="page-title"><%=t :versions %></h2>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th><%=t :name %></th>
        <th><%=t :status %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @versions.each do |v| %>
      <tr>
        <td><%= link_to v.name, edit_project_settings_version_path(current_project.slug,v.id) %></td>
        <td><%= version_status v.status %></td>
          <%= link_to t(:edit), edit_project_settings_version_path(current_project.slug, v.id) %>
        <td class="actions">
          <%= link_to t(:delete),
                      project_settings_version_path(current_project.slug, v.id),
                      data: {
                        method: :delete,
                        confirm: t('confirm.delete_version', name: v.name)
                      }
          %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
