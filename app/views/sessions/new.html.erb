<div class="login container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="page-header"><%= t :login %></h1>

            <% if defined?(error) && error == true %>
            <div class="alert alert-danger">
                <%= t :invalid_username_or_password %>
            </div>
            <% end %>

            <%= form_tag login_path, class: 'form-horizontal' do |f| %>
                <div class="form-group">
                    <%= label_tag :username, t(:username), class: 'control-label col-sm-3' %>
                    <div class="col-sm-9">
                        <%= text_field_tag :username, '', class: 'form-control' %>
                    </div>
                </div>

                <div class="form-group">
                    <%= label_tag :password, t(:password), class: 'control-label col-sm-3' %>
                    <div class="col-sm-9">
                        <%= password_field_tag :password, '', class: 'form-control' %>
                    </div>
                </div>

                <div class="form-actions">
                    <%= submit_tag t(:login), class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
