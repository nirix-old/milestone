<div class="admin projects container">
    <div class="pull-right">
        <%= link_to fa('plus', t(:new_project)), admin_projects_new_path, class: 'btn btn-success' %>
    </div>

    <h1 class="page-header"><%= t :projects %></h1>

    <table class="table table-striped table-hover">
        <thead>
            <th>Project</th>
            <th>Slug</th>
            <th></th>
        </thead>
        <tbody>
        <% @projects.each do |project| %>
            <tr>
                <td><%= link_to project.name, edit_admin_project_path(project) %></td>
                <td><%= project.slug %></td>
                <td>
                    <div class="text-right">
                        <%= link_to fa('pencil', t(:edit)), edit_admin_project_path(project), class: 'btn btn-warning btn-xs' %>
                        <%= link_to fa('trash', t(:delete)), [:admin, project], class: 'btn btn-danger btn-xs', method: :delete %>
                    </div>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
