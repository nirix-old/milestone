<div class="admin projects listing content">
	<div class="page-actions">
		<%=link_to t(:new_project), new_admin_project_path, class: 'btn-new' %>
	</div>
	<h2 class="page-title"><%=t :projects %></h2>

	<table class="table table-striped table-hover">
		<thead>
			<th class="name"><%=t :name %></th>
			<th class="actions"><%=t :actions %></th>
		</thead>
		<tbody>
		<% @projects.each do |p| %>
			<tr>
				<td><%=link_to p.name, project_settings_path(p) %></td>
				<td>
					<%=link_to p.name, project_settings_path(p), class: 'btn-edit' %>
					<%=link_to p.name, admin_project_path(p), class: 'btn-delete', method: :delete %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
