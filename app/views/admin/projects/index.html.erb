<div class="admin projects listing content">
  <div class="page-actions">
    <%=link_to t(:new_project), new_admin_project_path, class: 'btn btn-success' %>
  </div>
  <h2 id="page-title"><%=t :projects %></h2>

  <table class="table table-striped table-hover">
    <thead>
      <th class="name"><%=t :name %></th>
      <th></th>
    </thead>
    <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td><%=link_to p.name, project_settings_path(p.slug) %></td>
        <td class="actions">
          <%= link_to t(:edit), project_settings_path(p.slug), class: 'btn btn-xs btn-warning' %>
          <%= link_to t(:delete),
                      admin_project_path(p.slug),
                      data: {
                        method: :delete,
                        confirm: t('confirm.delete_x', name: p.name)
                      },
                      class: 'btn btn-xs btn-danger'
          %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
