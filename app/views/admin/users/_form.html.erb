<div class="form-group">
  <%= f.label :name, class: 'control-label col-md-3' %>
  <div class="col-md-9">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :username, class: 'control-label col-md-3' %>
  <div class="col-md-9">
    <%= f.text_field :username, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: 'control-label col-md-3' %>
  <div class="col-md-9">
    <%= f.email_field :email, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password, class: 'control-label col-md-3' %>
  <div class="col-md-9">
    <%= f.password_field :password, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, class: 'control-label col-md-3' %>
  <div class="col-md-9">
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :usergroup_id, class: 'control-label col-md-3' %>
  <div class="col-md-9">
    <%= f.collection_select :usergroup_id, Usergroup.all, :id, :name, {}, class: 'form-control' %>
  </div>
</div>
