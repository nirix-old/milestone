<div class="form-group">
  <%= f.label :name, class: 'control-label col-md-3' %>
  <div class="col-md-9">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <div class="col-md-9 col-md-offset-3">
    <div class="checkbox">
      <label>
        <%= f.check_box :is_closed, value: 1 %> <%= t :is_closed %>
      </label>
    </div>
  </div>
</div>
