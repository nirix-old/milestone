<div class="admin issue-types container">
  <div class="pull-right">
    <%= link_to fa('plus', t(:new_issue_type)), new_admin_issue_type_path, class: 'btn btn-success' %>
  </div>

  <h1 class="page-header"><%= t :issue_types %></h1>

  <table class="table table-striped table-hover">
    <thead>
      <th><%= t :name %></th>
      <th></th>
    </thead>
    <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= link_to type.name, edit_admin_issue_type_path(type) %></td>
        <td>
          <div class="text-right">
            <%= link_to fa(:pencil, t(:edit)), edit_admin_issue_type_path(type), class: 'btn btn-warning btn-xs' %>
            <%= link_to fa(:trash, t(:delete)), admin_issue_type_path(type), class: 'btn btn-danger btn-xs', method: :delete %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
