<div class="admin settings content">
  <h2 id="page-title"><%=t :settings %></h2>

  <%= form_tag request.path_info, class: 'form-horizontal' do %>
    <h3><%=t :milestone %></h3>
    <div class="well">
      <div class="form-group">
        <%= label_tag 'settings[title]', t(:title), class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= text_field_tag 'settings[title]', setting(:title), class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= submit_tag t(:save), class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
