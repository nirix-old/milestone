<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <%= render 'layouts/meta_nav' %>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
            <span class="sr-only"><%= t(:toggle_navigation) %></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to t(:admin), admin_root_path, class: 'navbar-brand' %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li<%= active_nav '/admin/settings' %>><%= link_to t(:settings), '#' %></li>
            <li<%= active_nav '/admin/projects(/.*)?' %>><%= link_to t(:projects), admin_projects_path %></li>
            <li<%= active_nav '/admin/issue_types(/.*)?' %>><%= link_to t(:issue_types), admin_issue_types_path %></li>
            <li<%= active_nav '/admin/users(/.*)?' %>><%= link_to t(:users), admin_users_path %></li>
          </ul>
        </div>
      </div>
    </nav>
    <main>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
