<div id="meta-nav">
  <div class="container">
    <ul class="site-nav">
      <% if current_project or request_matches '/admin(/.*)?' %>
        <%= link_to setting(:title), root_path %>
      <% end %>
    </ul>
    <ul class="user-nav">
    <% if logged_in? %>
      <li><%=link_to(t(:admincp), admin_path) if current_user.is_admin? %></li>
      <li><%=link_to t(:logout), logout_path, data: { method: :delete } %></li>
    <% else %>
      <li><%=link_to t(:login), login_path %></li>
      <li><%=link_to t(:register), register_path %></li>
    <% end %>
    </ul>
  </div>
</div>
