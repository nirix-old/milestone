<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <%= render 'layouts/meta_nav' %>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
            <span class="sr-only"><%= t(:toggle_navigation) %></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to setting(:title), root_path, class: 'navbar-brand' %>
        </div>
        <div class="collapse navbar-collapse">
        <% if current_project %>
          <ul class="nav navbar-nav">
            <li<%= active_nav '/(.*)/roadmap(/.*)?' %>><%= link_to t(:roadmap), project_versions_path(current_project) %></li>
            <li<%= active_nav '/(.*)/issues(/\d+)?' %>><%= link_to t(:issues), project_issues_path(current_project) %></li>
            <li<%= active_nav '/(.*)/issues/new' %>><%= link_to t(:new_issue), new_project_issue_path(current_project) %></li>
          </ul>
        <% end %>
        </div>
      </div>
    </nav>
    <main>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
