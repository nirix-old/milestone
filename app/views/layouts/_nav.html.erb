<nav id="navbar">
  <ul>
  <% if current_project %>
    <% if request_matches "#{project_settings_path(current_project.slug)}(/.*)?" %>
      <li><%=link_to t(:versions), project_settings_versions_path(current_project.slug) %></li>
    <% else %>
      <li><%=link_to t(:issues), project_issues_path(current_project.slug) %></li>
      <li><%=link_to t(:roadmap), project_versions_path(current_project.slug) %></li>
      <li><%=link_to t(:settings), project_settings_path(current_project.slug) %></li>
    <% end %>
  <% else %>
    <li><%=link_to t(:projects), root_path %></li>
  <% end  %>
  </ul>
</nav>
