<div class="new-user container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="page-header"><%= t :create_account %></h1>

            <%= error_messages_for @user %>

            <%= form_for @user, html: { class: 'form-horizontal' } do |f| %>
                <div class="form-group">
                    <%= f.label :name, class: 'control-label col-sm-3' %>
                    <div class="col-sm-9">
                        <%= f.text_field :name, class: 'form-control' %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :username, class: 'control-label col-sm-3' %>
                    <div class="col-sm-9">
                        <%= f.text_field :username, class: 'form-control' %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :password, class: 'control-label col-sm-3' %>
                    <div class="col-sm-9">
                        <%= f.password_field :password, class: 'form-control' %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: t(:confirm) %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :email, class: 'control-label col-sm-3' %>
                    <div class="col-sm-9">
                        <%= f.email_field :email, class: 'form-control' %>
                    </div>
                </div>

                <div class="form-actions">
                    <%= f.submit t(:create_account), class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
